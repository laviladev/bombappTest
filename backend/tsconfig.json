{
  "compilerOptions": {
    "target": "ES2020",                   // Versión de ECMAScript a la que compilar
    "module": "CommonJS",                // Módulo compatible con Node.js
    "rootDir": "./src",                  // Directorio raíz de los archivos fuente
    "outDir": "./dist",                  // Directorio de salida para los archivos compilados
    "esModuleInterop": true,             // Habilitar compatibilidad con importaciones ES6
    "forceConsistentCasingInFileNames": true, // Consistencia en los nombres de archivo
    "strict": false,                      // Activar todas las comprobaciones estrictas
    "skipLibCheck": true,                // Omitir la verificación de tipos en los archivos de definición
    "resolveJsonModule": true,           // Permitir la importación de archivos JSON
    "moduleResolution": "node",          // Resolver módulos al estilo de Node.js
    "types": ["node"]                    // Incluir los tipos de Node.js
  },
  "include": ["src/**/*"],               // Todo dentro de la carpeta src
  "exclude": ["node_modules", "dist"]    // Archivos o carpetas a excluir
}
